{
	"name": "s.m.d",
	"productName": "S.M.D",
	"version": "0.1.0",
	"description": "S.M.D is an application that seamlessly integrates with the Spotify API to help you discover, download, and enjoy your favorite songs from a single platform",
	"main": "app/src/main/index.js",
	"author": "Noah Wesley",
	"license": "GPL-3.0",
	"scripts": {
		"start:debug": "electron . --trace-warnings",
		"start:no-database": "npm run clean:debug-database && npm run start ",
		"start:no-preference": "npm run clean:preference && npm run start",
		"start": "electron .",
		"test": "jest .",
		"clean:build": "node scripts/tasks/clean-build.js",
		"clean:debug-database": "node scripts/tasks/clean-database.js",
		"clean:preference": "node scripts/tasks/clean-preference.js",
		"clean": "npm run clean:preference && npm run clean:debug-database",
		"eslint:base": "eslint --ignore-path .gitignore",
		"prettier:base": "prettier --ignore-path .gitignore",
		"lint:eslint": "npm run eslint:base -- --max-warnings 0 \"**/*.{js,ts,tsx,mdx}\"",
		"lint:eslint-config-prettier": "eslint --print-config .eslintrc | eslint-config-prettier-check",
		"lint:start": "npm run lint && npm run start",
		"lint:start-no-database": "npm run clean:debug-database && npm run lint:start ",
		"lint:start-no-preference": "npm run clean:preference && npm run lint:start",
		"lint": "npm run lint:eslint",
		"format:prettier": "npm run prettier:base -- --write \"**/*.{js,ts,tsx,json,md,mdx,css,html}\"",
		"format:eslint": "npm run eslint:base -- --fix \"**/*.{js,ts,tsx,mdx}\"",
		"format": "npm run format:eslint && npm run format:prettier",
		"generate:icons": "electron-icon-maker --input=./app/resources/build/tools/_$app_icon.png --output=./app/resources/build",
		"generate:installers": "node scripts/package/electron-windows-installer.js",
		"package:win-base": "electron-packager . S.M.D --ignore=\"^(/.git|/.github|/.vscode|/task.todo|/.env|/sample-images|/build|/debug|/config.json|/assets|/scripts|/test|/website|/.editorconfig|/.eslintignore|/.eslintrc|/.gitignore|/.prettierignore|/.prettierrc|/contributing.md|/cspell.json|/readme.md)$\" --overwrite --prune=true --out=build/dist/win --platform=win32 --icon=app/resources/build/icons/win/icon.ico",
		"package:win32": "npm run package:win-base -- --arch=ia32",
		"package:win64": "npm run package:win-base -- --arch=x64",
		"package:windows": "npm run package:win32 && npm run package:win64",
		"package": "npm run package:windows",
		"rebuild:windows": "npm run generate:icons && npm run package:win32 && npm run package:win64 && npm run generate:installers",
		"rebuild": "npm run rebuild:windows",
		"build:windows": "npm run package:windows && npm run generate:installers",
		"build": "npm run build:windows",
		"build-start": "npm run build && npm run start"
	},
	"homepage": "https://www.noahweasley.github.io/SMD-Desktop",
	"repository": {
		"type": "git",
		"url": "https://github.com/noahweasley/SMD-Desktop.git"
	},
	"funding": {
		"type": "patreon",
		"url": "https://www.patreon.com/noahweasley"
	},
	"engines": {
		"node": ">= 18.12.1"
	},
	"keywords": [
		"electron",
		"music",
		"music-player",
		"spotify",
		"youtube",
		"downloader",
		"music-downloader",
		"youtube-downloader",
		"spotify-downloader"
	],
	"devDependencies": {
		"chalk": "^4.1.2",
		"dotenv": "^16.0.3",
		"electron": "^23.1.4",
		"electron-icon-maker": "^0.0.5",
		"electron-packager": "^17.1.1",
		"electron-winstaller": "^5.1.0",
		"eslint": "^8.34.0",
		"jest": "^29.4.3",
		"prettier": "2.8.4"
	},
	"dependencies": {
		"electron-squirrel-startup": "^1.0.0",
		"express": "^4.18.2",
		"knex": "^2.3.0",
		"node-user-settings": "^1.5.3",
		"spotify-web-api-node": "^5.0.2",
		"sqlite3": "^5.1.2",
		"update-electron-app": "^2.0.1",
		"uuid": "^9.0.0",
		"youtube-search-without-api-key": "^1.0.7",
		"yt-dlp-wrap": "^2.3.11"
	}
}
