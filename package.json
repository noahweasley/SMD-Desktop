{
  "name": "smd-desktop",
  "productName": "S.M.D Desktop",
  "version": "0.0.1",
  "description": "An Cross-Platform desktop application to search and download songs. Also integrates with the Spotify API",
  "main": "app/src/main/index.js",
  "author": "Noah Wesley",
  "license": "GPL-3.0",
  "homepage": "https://www.noahweasley.github.io/SMD-Desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/noahweasley/SMD-Desktop.git"
  },
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/noahweasley"
  },
  "engines": {
    "node": ">= 18.12.1"
  },
  "keywords": [
    "electron",
    "music",
    "spotify",
    "youtube",
    "downloader",
    "music-downloader",
    "youtube-downloader",
    "spotify-downloader"
  ],
  "scripts": {
    "start": "electron .",
    "lint:start": "npm run lint && npm run start",
    "start-no-database": "npm run clear-debug-database && npm run start ",
    "lint:start-no-database": "npm run clear-debug-database && npm run lint:start ",
    "lint:start-no-preference": "npm run clear-preference && npm run lint:start",
    "start-no-preference": "npm run clear-preference && npm run start",
    "clear-debug-database": "del /q %userprofile%\\Desktop\\Database\\*",
    "clear-preference": "del /q \"%userprofile%\\AppData\\Roaming\\S.M.D Desktop\\User\\Preferences\"",
    "clear-cache": "npm run clear-preference && npm run clear-debug-database",
    "test": "jest .",
    "debug": "electron . --trace-warnings",
    "lint": "npm run lint:eslint",
    "eslint:base": "eslint --ignore-path .gitignore",
    "prettier:base": "prettier --ignore-path .gitignore",
    "lint:eslint": "npm run eslint:base -- --max-warnings 0 \"**/*.{js,ts,tsx,mdx}\"",
    "lint:eslint-config-prettier": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "format:prettier": "npm run prettier:base -- --write \"**/*.{js,ts,tsx,json,md,mdx,css,html}\"",
    "format:eslint": "npm run eslint:base -- --fix \"**/*.{js,ts,tsx,mdx}\"",
    "format": "npm run format:eslint && npm run format:prettier",
    "generate-icons": "electron-icon-maker --input=./app/resources/build/tools/_$app_icon.png --output=./app/resources/build",
    "pack:win32": "electron-packager . SMD-Desktop --ignore=./.gitignore --overwrite --prune=true --out=build/dist/win --platform=win32 --arch=ia32 --icon=app/resources/build/icons/win/icon.ico",
    "pack:win64": "electron-packager . SMD-Desktop --ignore=./.gitignore --overwrite --prune=true --out=build/dist/win --platform=win32 --arch=x64 --icon=app/resources/build/icons/win/icon.ico",
    "package": "npm run build && npm run start",
    "generate-installers": "node package/electron-windows-installer.js",
    "build:windows": "npm run generate-icons && npm run pack:win32 && npm run pack:win64 && npm run generate-installers",
    "build": "npm run build:windows"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "electron": "^23.1.4",
    "electron-icon-maker": "^0.0.5",
    "electron-packager": "^17.1.1",
    "electron-winstaller": "^5.1.0",
    "eslint": "^8.34.0",
    "jest": "^29.4.3",
    "prettier": "2.8.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "node-user-settings": "^1.5.3",
    "spotify-web-api-node": "^5.0.2",
    "sqlite3": "^5.1.2",
    "update-electron-app": "^2.0.1",
    "youtube-search-without-api-key": "^1.0.7",
    "yt-dlp-wrap": "^2.3.11"
  }
}
